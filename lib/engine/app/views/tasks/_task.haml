%tr
  %td
    = task.name
  %td
    = task.type_name
  %td
    = task.trigger
  %td
    = task.every
  %td
    = task.active? ? 'Yes' : 'No'
  %td
    = link_to 'Edit', edit_task_path(task), class: edit_class
    = link_to 'Delete', task_path(task), class: remove_class, :confirm => 'Are you sure?', :method => :delete
